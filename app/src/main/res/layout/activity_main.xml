<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.koloh.musicapp.MainActivity">

    <TextView
        android:id="@+id/classic"
        style="@style/CustomizedLayoutViewStyle"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/text_color_main"
        android:background="@color/background_color_classicActivity"
        android:text="@string/classic_category" />


    <TextView
        android:id="@+id/country"
        style="@style/CustomizedLayoutViewStyle"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/text_color_main"
        android:background="@color/background_color_countryActivity"
        android:text="@string/country_category" />

    <TextView
        android:id="@+id/african"
        style="@style/CustomizedLayoutViewStyle"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/text_color_main"
        android:background="@color/background_color_africanActivity"
        android:text="@string/african_category" />

    <TextView
        android:id="@+id/jazz"
        style="@style/CustomizedLayoutViewStyle"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/text_color_main"
        android:background="@color/background_color_jazzActivity"
        android:text="@string/jazz_category" />

    <TextView
        android:id="@+id/rock"
        style="@style/CustomizedLayoutViewStyle"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/text_color_main"
        android:background="@color/background_color_rockActivity"
        android:text="@string/rock_category" />

    <TextView
        android:id="@+id/pop"
        style="@style/CustomizedLayoutViewStyle"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/text_color_main"
        android:background="@color/background_color_popActivity"
        android:text="@string/pop_category" />

</LinearLayout>
